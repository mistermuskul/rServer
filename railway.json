{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "bash start.sh",
    "restartPolicyType": "NEVER"
  },
  "variables": {
    "DB_CONNECTION": "mysql",
    "DB_HOST": "${{MYSQLHOST}}",
    "DB_PORT": "${{MYSQLPORT}}",
    "DB_DATABASE": "${{MYSQLDATABASE}}",
    "DB_USERNAME": "${{MYSQLUSER}}",
    "DB_PASSWORD": "${{MYSQLPASSWORD}}",
    "APP_ENV": "production",
    "APP_DEBUG": "false"
  }
} 